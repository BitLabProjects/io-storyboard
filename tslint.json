{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules":{
    "max-classes-per-file": [true, 5, "exclude-class-expressions"],
    "no-console": false,
    "object-literal-sort-keys": false  ,
    "jsx-boolean-value": false
  }
}